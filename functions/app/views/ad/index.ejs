<% include ../header %>

<link rel="stylesheet" href=<%= app_name %>/assets/css/styles.css?=140>
<link href=<%= app_name %>/assets/demo/variations/default.css rel='stylesheet' type='text/css' media='all' id='styleswitcher'>
<link href=<%= app_name %>/assets/demo/variations/default.css rel='stylesheet' type='text/css' media='all' id='headerswitcher'>
<link rel='stylesheet' type='text/css' href=<%= app_name %>/assets/plugins/datatables/dataTables.css>
<link rel='stylesheet' type='text/css' href=<%= app_name %>/assets/plugins/codeprettifier/prettify.css>
<link rel='stylesheet' type='text/css' href=<%= app_name %>/assets/plugins/form-toggle/toggles.css>

<% if(saved) {%>
<div class="alert alert-success alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Success!</strong> Your action is completed
</div>
<% } %>

<div class="container">
    <h2>Ad Config</h2>
    <hr>

    <div class="col-sm-8">
        <form method="post" action=<%= app_name %>/ad/create>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ad ID Banner</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ad_id_banner" placeholder="Ad Id Banner" <% if(ad) {%> value=<%= ad.ad_id_banner %> <%}%> >
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ad ID Inter</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ad_id_inter" placeholder="Ad Id Inter" <% if(ad) {%> value=<%= ad.ad_id_inter %> <%}%> >
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>